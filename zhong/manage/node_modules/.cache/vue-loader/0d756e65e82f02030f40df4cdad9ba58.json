/el-input>\r\n        </el-col>\r\n      </el-row>\r\n      <el-row :gutter=\"20\">\r\n        <el-col :span=\"4\" class=\"col\">销售热线</el-col>\r\n        <el-col :span=\"16\">\r\n          <el-input v-model=\"shop.sell\" placeholder=\"请输入内容\"></el-input>\r\n        </el-col>\r\n      </el-row>\r\n      <el-row :gutter=\"20\">\r\n        <el-col :span=\"4\" class=\"col\">售后服务电话</el-col>\r\n        <el-col :span=\"16\">\r\n          <el-input v-model=\"shop.afterSell\" placeholder=\"请输入内容\"></el-input>\r\n        </el-col>\r\n      </el-row>\r\n      <el-row :gutter=\"20\">\r\n        <el-col :span=\"4\" class=\"col\">传真</el-col>\r\n        <el-col :span=\"16\">\r\n          <el-input v-model=\"shop.fax\" placeholder=\"请输入内容\"></el-input>\r\n        </el-col>\r\n      </el-row>\r\n      <el-row :gutter=\"20\">\r\n        <el-col :span=\"4\" class=\"col\">电子邮箱</el-col>\r\n        <el-col :span=\"16\">\r\n          <el-input v-model=\"shop.email\" placeholder=\"请输入内容\"></el-input>\r\n        </el-col>\r\n      </el-row>\r\n      <el-row :gutter=\"20\">\r\n        <el-col :span=\"4\" class=\"col\">网站地址</el-col>\r\n        <el-col :span=\"16\">\r\n          <el-input v-model=\"shop.web\" placeholder=\"请输入内容\"></el-input>\r\n        </el-col>\r\n      </el-row>\r\n      <el-row :gutter=\"20\">\r\n        <el-col :span=\"4\" class=\"col\">公司介绍</el-col>\r\n        <el-col :span=\"16\">\r\n          <textarea v-model=\"shop.introduce\" placeholder=\"请输入内容\"></textarea>\r\n        </el-col>\r\n      </el-row>\r\n      <div style=\"height: 300px\"></div>\r\n      <div style=\"font-size: 13px; color: #bbb\">注：每次上传会覆盖之前的图片,且每次最多上传五张图片</div>\r\n      <el-row :gutter=\"20\">\r\n        <el-col :span=\"4\" class=\"col\">店铺首页轮播图</el-col>\r\n        <el-col :span=\"16\">\r\n          <div v-if=\"imgs.length > 0\" class=\"flex\">\r\n            <div class=\"img-box\" v-for=\"(item, i) in imgs\" :key=\"i\">\r\n              <div>\r\n                <img :src=\"item\" alt />\r\n                <span @click=\"del(i)\"><i class=\"el-icon-delete\"></i></span>\r\n              </div>\r\n            </div>\r\n            <div style=\"clear: both;\"></div>\r\n          </div>\r\n          <div class=\"img-file\" v-if=\"imgs.length < 5\">\r\n            <input type=\"file\" id=\"files\" @change=\"fileChange\" />\r\n            <div style=\"font-size: 12px; color: #999; margin-top: 15px\">图片格式为png/gif/jpeg; 尺寸为400 x 200, 大小不大于10M</div>\r\n          </div>\r\n        </el-col>\r\n      </el-row>\r\n      <el-row :gutter=\"20\">\r\n        <img src=\"\" alt=\"\">\r\n      </el-row>\r\n      <el-row :gutter=\"20\">\r\n        <el-col :span=\"10\" :offset=\"4\">\r\n          <el-button type=\"primary\" @click=\"submit\">提交</el-button>\r\n        </el-col>\r\n      </el-row>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nexport default {\r\n  data () {\r\n    return {\r\n      // 店铺信息\r\n      shop: {\r\n        name4s: '',\r\n        address: '',\r\n        sell: '',\r\n        afterSell: '',\r\n        fax: '',\r\n        email: '',\r\n        web: '',\r\n        introduce: '',\r\n        token: window.sessionStorage.getItem('token'),\r\n        ary: []\r\n      },\r\n      // 图片上传\r\n      imgs: [], // 图片预览地址\r\n      imgfiles: [] // 图片原文件，上传到后台的数据\r\n    }\r\n  },\r\n  methods: {\r\n    // 获取经销商信息\r\n    async getList () {\r\n      const { data: res } = await this.$http.post('/dealer/getContact', {\r\n        token: window.sessionStorage.getItem('token')\r\n      })\r\n      this.shop.name4s = res.name4s\r\n      this.shop.address = res.address\r\n      this.shop.sell = res.sell\r\n      this.shop.afterSell = res.afterSell\r\n      this.shop.fax = res.fax\r\n      this.shop.email = res.email\r\n      this.shop.web = res.web\r\n      this.shop.introduce = res.introduce\r\n    },\r\n    // 上传图片\r\n    fileChange () {\r\n      // 加入图片\r\n      var _this = this\r\n      var event = event || window.event\r\n      var file = event.target.files\r\n      var leng = file.length\r\n      for (var i = 0; i < leng; i++) {\r\n        var reader = new FileReader() // 使用 FileReader 来获取图片路径及预览效果\r\n        _this.imgfiles.push(file[i])\r\n        reader.readAsDataURL(file[i])\r\n        reader.onload = function(e) {\r\n          _this.imgs.push(e.target.result) // base 64 图片地址形成预览\r\n        }\r\n      }\r\n    },\r\n    del (i) {\r\n      // 根据下标删除\r\n      this.imgfiles.splice(i, 1)\r\n      this.imgs.splice(i, 1)\r\n    },\r\n    // 提交\r\n    async submit () {\r\n      // 说明用户上传了图片\r\n      if (this.imgs !== '[]') {\r\n        let ary = []\r\n        for(var i = 0; i < this.imgfiles.length; i++) {\r\n          const formData = new FormData()\r\n          formData.append('image_data', this.imgfiles[i])\r\n          const { data: res } = await this.$http.post('/upload/addImage', formData, {\r\n            headers: {\r\n              'Content-Type': 'multipart/form-data'\r\n            }\r\n          })\r\n          ary.push(res)\r\n        }\r\n        this.shop.ary = ary\r\n      }\r\n      const rew = await this.$http.post('/dealer/updateContact', this.shop)\r\n      if (rew.status !== 200 || rew.data !== true) {\r\n        return this.$message.error('提交失败')\r\n      }\r\n      this.$message.success('修改成功')\r\n      this.$router.go(0)\r\n    }\r\n  },\r\n  created () {\r\n    // 获取经销商信息\r\n    this.getList()\r\n  }\r\n}\r\n</script>\r\n\r\n<style lang=\"less\" scoped>\r\nh2 {\r\n  margin-bottom: 30px;\r\n}\r\n.el-row {\r\n  height: 40px;\r\n  margin-bottom: 20px;\r\n  .col {\r\n    line-height: 40px;\r\n  }\r\n}\r\n.main {\r\n  margin-left: 60px;\r\n  .el-input {\r\n    width: 500px;\r\n  }\r\n  textarea {\r\n    resize: none;\r\n    height: 300px;\r\n    width: 100%;\r\n  }\r\n  .el-button {\r\n    margin-top: 30px;\r\n    width: 100%;\r\n  }\r\n  .img-file {\r\n    margin-top: 10px;\r\n  }\r\n  .img-box {\r\n    float: left;\r\n  }\r\n  img {\r\n    width: 400px;\r\n    height: 200px;\r\n  }\r\n}\r\n</style>\r\n"]}]}