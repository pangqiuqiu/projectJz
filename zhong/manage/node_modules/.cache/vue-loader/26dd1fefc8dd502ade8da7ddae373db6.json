      <el-input v-model=\"addUserForm.name\" autocomplete=\"off\"></el-input>\r\n        </el-form-item>\r\n        <el-form-item label=\"手机号\" :label-width=\"formLabelWidth\">\r\n          <el-input v-model=\"addUserForm.phone\" autocomplete=\"off\"></el-input>\r\n        </el-form-item>\r\n      </el-form>\r\n      <div slot=\"footer\" class=\"dialog-footer\">\r\n        <el-button @click=\"addUser= false\">取 消</el-button>\r\n        <el-button type=\"primary\" @click=\"addUserSubmission\">确 定</el-button>\r\n      </div>\r\n    </el-dialog>\r\n    <!-- 搜索区域 -->\r\n    <el-card body-style=\"padding: 10px;\" v-if=\"this.level === 1 || this.level === 2\">\r\n      <el-form :inline=\"true\" :model=\"formInline\" class=\"demo-form-inline\">\r\n        <el-form-item label=\"等级\">\r\n          <el-select v-model=\"formInline.level\" placeholder=\"请选择等级\" size=\"mini\">\r\n            <el-option label=\"不限\" value=\"\"></el-option>\r\n            <el-option label=\"总部\" value=\"2\"></el-option>\r\n            <el-option label=\"省代理\" value=\"3\"></el-option>\r\n            <el-option label=\"市代理\" value=\"4\"></el-option>\r\n          </el-select>\r\n        </el-form-item>\r\n        <el-form-item label=\"省份\" v-show=\"this.formInline.level === '3' || this.formInline.level === '4'\">\r\n          <el-select @visible-change=\"dropDownProvince($event)\" v-model=\"formInline.subStationPro\" placeholder=\"请选择省份\" size=\"mini\" @change=\"changeP\">\r\n            <el-option label=\"不限\" value=\"\"></el-option>\r\n            <el-option :label=\"item.province\" :value=\"item.provinceid\" v-for=\"item in provinceAry\" :key=\"item.provinceid\"></el-option>\r\n          </el-select>\r\n        </el-form-item>\r\n        <el-form-item label=\"城市\" v-show=\"this.formInline.level === '4'\">\r\n          <el-select :disabled=\"disabledCity\" @visible-change=\"dropDownCity($event)\" v-model=\"formInline.subStationCity\" placeholder=\"请选择城市\" size=\"mini\">\r\n            <el-option label=\"不限\" value=\"\"></el-option>\r\n            <el-option :label=\"item.city\" :value=\"item.cityid\" v-for=\"item in cityAry\" :key=\"item.city\"></el-option>\r\n          </el-select>\r\n        </el-form-item>\r\n        <el-form-item>\r\n          <el-button type=\"primary\" @click=\"submit\" size=\"mini\">查询</el-button>\r\n        </el-form-item>\r\n      </el-form>\r\n    </el-card>\r\n    <!-- 搜索结果 -->\r\n    <el-table\r\n      :header-cell-style=\"{ 'text-align': 'center', 'font-size': '14px', 'color': '#000' }\"\r\n      :cell-style=\"{ 'text-align': 'center' }\"\r\n      :data=\"tableData\"\r\n      border\r\n      style=\"width: 100%\">\r\n      <el-table-column\r\n        prop=\"id\"\r\n        label=\"编号\"\r\n        width=\"100\">\r\n      </el-table-column>\r\n      <el-table-column\r\n        prop=\"name\"\r\n        label=\"员工姓名\"\r\n        width=\"200\">\r\n      </el-table-column>\r\n      <el-table-column\r\n        prop=\"phone\"\r\n        label=\"手机号\"\r\n        >\r\n      </el-table-column>\r\n      <el-table-column\r\n        prop=\"sex\"\r\n        label=\"性别\"\r\n        >\r\n      </el-table-column>\r\n       <el-table-column label=\"操作\">\r\n        <template slot-scope=\"scope\">\r\n          <el-button\r\n            size=\"mini\"\r\n            type=\"danger\"\r\n            @click=\"handleDelete(scope.row)\">删除</el-button>\r\n        </template>\r\n      </el-table-column>\r\n    </el-table>\r\n    <!-- 分页 -->\r\n    <el-pagination\r\n      @current-change=\"changePage\"\r\n      hide-on-single-page\r\n      :current-page=\"this.formInline.pageNo\"\r\n      :page-size=\"this.formInline.pageSize\"\r\n      background\r\n      layout=\"prev, pager, next\"\r\n      :total=\"total\">\r\n    </el-pagination>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nexport default {\r\n  data () {\r\n    return {\r\n      // 等级\r\n      level: '',\r\n      // 省份赋值\r\n      sheng: '',\r\n      // 搜索条件\r\n      formInline: {\r\n        subStationPro: '',\r\n        subStationCity: '',\r\n        level: '',\r\n        token: window.sessionStorage.getItem('token'),\r\n        pageNo: 1,\r\n        pageSize: 10\r\n      },\r\n      // 总数\r\n      total: 0,\r\n      // 省份\r\n      provinceAry: [],\r\n      // 城市\r\n      cityAry: [],\r\n      // 表格\r\n      tableData: [],\r\n      // 新增员工对话框\r\n      addUser: false,\r\n      addUserForm: {\r\n        name: '',\r\n        phone: '',\r\n        token: window.sessionStorage.getItem('token')\r\n      },\r\n      formLabelWidth: '120px'\r\n    }\r\n  },\r\n  methods: {\r\n    // 获取员工列表\r\n    async getUserList () {\r\n      if (this.formInline.level === '' || this.formInline.level === '2') {\r\n        this.formInline.subStationCity = ''\r\n        this.formInline.subStationPro = ''\r\n      } else if (this.formInline.level === '3')  {\r\n        this.formInline.subStationCity = ''\r\n      }\r\n      if (this.formInline.subStationCity !== '') {\r\n        this.sheng = this.formInline.subStationPro\r\n        this.formInline.subStationPro = ''\r\n      }\r\n      const { data: res } = await this.$http.post('/user/showUser', this.formInline)\r\n      this.tableData = res.l\r\n      this.total = res.num\r\n      this.formInline.subStationPro = this.sheng\r\n    },\r\n    // 获取员工等级\r\n    async getLevel () {\r\n      const { data: res } = await this.$http.post('/user/level', {\r\n        token: window.sessionStorage.getItem('token')\r\n      })\r\n      this.level = res\r\n    },\r\n    // 获取省份\r\n    async dropDownProvince (callback) {\r\n      if (callback === true) {\r\n        const { data: res } = await this.$http.post('/area/getProvince')\r\n        this.provinceAry = res\r\n      }\r\n    },\r\n    changeP () {\r\n      this.formInline.subStationCity = ''\r\n    },\r\n    // 获取城市\r\n    async dropDownCity (callback) {\r\n      if (callback === true) {\r\n        const { data: res } = await this.$http.post('/area/getCityByPid', {\r\n          provinceId: this.formInline.subStationPro\r\n        })\r\n        this.cityAry = res\r\n      }\r\n    },\r\n    // 查询\r\n    submit () {\r\n      this.formInline.pageNo = 1\r\n      this.getUserList()\r\n    },\r\n    // 切换页数\r\n    changePage (index) {\r\n      this.formInline.pageNo = index\r\n      this.getUserList()\r\n    },\r\n    // 删除\r\n    async handleDelete (row) {\r\n      const res = await this.$http.post('/user/delUser', {\r\n        id: row.id\r\n      })\r\n      if (res.status !== 200 || res.data !== true) {\r\n        return this.$message.error('操作失败')\r\n      }\r\n      this.$message.success('操作成功')\r\n      this.submit()\r\n    },\r\n    // 新增员工\r\n    async addUserSubmission () {\r\n      if (this.addUserForm.name.trim() === '') {\r\n        return alert('请输入姓名')\r\n      }\r\n      if (!(/^1[3456789]\\d{9}$/.test(this.addUserForm.phone))) {\r\n        alert(\"手机号码有误，请重新填写\") \r\n        return\r\n      }\r\n      const res = await this.$http.post('/user/addUser', this.addUserForm)\r\n      if (res.status !== 200 || res.data !== true) {\r\n        return this.$message.error('新增员工失败')\r\n      }\r\n      this.$message.success('新增成功')\r\n      this.addUser = false\r\n      this.addUserForm.name = ''\r\n      this.addUserForm.phone = ''\r\n      this.submit()\r\n    }\r\n  },\r\n  computed: {\r\n    // 判断城市下拉框\r\n    disabledCity () {\r\n      if (this.formInline.subStationPro !== '') {\r\n        return false\r\n      }\r\n      return true\r\n    }\r\n  },\r\n  created () {\r\n    // 获取用户列表\r\n    this.getUserList()\r\n    // 获取员工等级\r\n    this.getLevel()\r\n  }\r\n}\r\n</script>\r\n\r\n<style lang=\"less\" scoped>\r\nh2 {\r\n  margin-bottom: 20px;\r\n}\r\n.el-dialog {\r\n  .el-input {\r\n    width: 300px;\r\n  }\r\n}\r\n// 搜索卡片区域\r\n.el-card {\r\n  margin-bottom: 15px;\r\n  .el-form-item {\r\n    margin-right: 20px;\r\n    margin-bottom: 0;\r\n  }\r\n}\r\n// 分页\r\n.el-pagination {\r\n  text-align: center;\r\n  margin-top: 20px;\r\n}\r\n</style>\r\n"]}]}