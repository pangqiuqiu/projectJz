  }\r\n    },\r\n    // 获取当前登陆人的等级\r\n    async getLevel() {\r\n      const { data: res } = await this.$http.post('/user/level')\r\n      this.level = res\r\n    },\r\n    async creatProblem () {\r\n        this.dialogProblemVisible = true;\r\n    },\r\n    async creatAnswer (row) {\r\n        this.dialogAnswerVisible = true;\r\n        this.id = row.id;\r\n    },\r\n    async submitProblem() {\r\n        const { data: res } = await this.$http.post('/extension/problem', {\r\n            problem:this.txtproblem\r\n        })\r\n        if(res){\r\n          this.$message.success('提交成功')\r\n          this.dialogProblemVisible = false;\r\n          this.formInline.pageNo = 1\r\n          this.getExtensionList()\r\n        }else{\r\n          this.$message.success('提交失败')\r\n        }\r\n    },\r\n    async submitAnswer() {\r\n        const { data: res } = await this.$http.post('/extension/answer', {\r\n            id: this.id,\r\n            answer:this.txtanswer\r\n        })\r\n        if(res){\r\n          this.$message.success('提交成功')\r\n          this.dialogAnswerVisible = false;\r\n          this.formInline.pageNo = 1\r\n          this.getExtensionList()\r\n        }else{\r\n          this.$message.success('提交失败')\r\n        }\r\n    },\r\n  },\r\n  computed: {},\r\n  created() {\r\n    // 获取特卖列表\r\n    this.getExtensionList()\r\n    // 等级\r\n    this.getLevel()\r\n  },\r\n  mounted() {},\r\n}\r\n</script>\r\n\r\n<style lang=\"less\" scoped>\r\n\r\nh2 {\r\n  margin-bottom: 20px;\r\n}\r\n// 搜索卡片区域\r\n.el-card {\r\n  margin-bottom: 15px;\r\n  .el-form-item {\r\n    margin-right: 20px;\r\n    margin-bottom: 0;\r\n  }\r\n  .el-button {\r\n    width: 150px;\r\n  }\r\n}\r\n// 分页\r\n.el-pagination {\r\n  text-align: center;\r\n  margin-top: 20px;\r\n}\r\n\r\n.img {\r\n  width: 500px;\r\n}\r\n.admin {\r\n  ul {\r\n    overflow: hidden;\r\n  }\r\n  li {\r\n    float: left;\r\n    .el-checkbox {\r\n      margin-right: 7px;\r\n    }\r\n    span {\r\n      margin-right: 20px